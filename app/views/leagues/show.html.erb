<div class='container'>
  <h3>League Homepage</h3>

  <div class="darken">
    <p id="leagueName"><%=@league.name%></p>
    <p id="leagueDraft"><%=@league.draft%></p>
    <p id="leagueScoring"><%=@league.scoring%></p>
    <ul id="leagueTeams"><%@league.teams.each do |team|%>
      <li><%=team.team_name%></li>
      <%end%>
    </ul>
  </div>

    <br></br>
    <a href="#" class="js-next" data-id="<%=@league.id%>">Next...</a>
    <% if current_user.admin %>
    <div class='admin'>
      <h4>Admin Tools</h4>
      <%= link_to "Edit League", edit_league_path(@league) %><br>

      <%= link_to "Delete", @league, method: :delete, data: { confirm: "Really?" } %>
    </div>
    <%end%>
  </div>
</div>
