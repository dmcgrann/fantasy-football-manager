<div class='container'>
  <h3>Active Leagues</h3>

  <ul>
    <% @leagues.each do |league| %>
      <li><%= link_to league.name, league_path(league) %></li>
      <button class="details" data-id="<%= league.id %>">Details</button>
    <%end%>
  </ul>


  <% if current_user.admin %>
    <div class='admin'>
      <h4>Admin Tools</h4>
      <p><%= link_to "Create a New League", new_league_path %></p>
    </div>
  <%end%>

</div>
