<div class='container'>

  <h3><%= link_to "Current Players", players_path%></h3>

  <% if current_user.admin %>
  <div class='admin'>
  <h4>Administrators</h4>
    <ul>
      <li><%= link_to "Add a Player", new_player_path %></li>
      <li>Select a player from the list below to edit his information.</li>
    </ul>
  </div>
  <%end%>

  <%=form_tag(@players_path, method: 'get') do %>
    <%= text_field_tag :nfl_team %>
    <%=submit_tag 'Search by Team'%>
  <%end%>

  <div class='anchors'>
    <a href="#QBs">QBs</a>
    <a href="#RBs">RBs</a>
    <a href="#WRs">WRs</a>
    <a href="#TEs">TEs</a>
  </div>
  <div class='darken'>
    <section id="QBs">
      <h4>QBs</h4>
      <% @players.qb.list.each do |p| %>
        <p><%= link_to p.player_info, player_path(p) %></p>
        <%end%>
      </section>

      <section id="RBs">
        <h4>RBs</h4>
        <% @players.rb.list.each do |p| %>
        <p><%= link_to p.player_info, player_path(p) %></p>
        <%end%>
      </section>

      <section id="WRs">
        <h4>WRs</h4>
        <% @players.wr.list.each do |p| %>
        <p><%= link_to p.player_info, player_path(p) %></p>
        <%end%>
      </section>

      <section id="TEs">
        <h4>TEs</h4>
        <% @players.te.list.each do |p| %>
        <p><%= link_to p.player_info, player_path(p) %></p>
        <%end%>
      </section>
    </div>

  <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>

</div>
