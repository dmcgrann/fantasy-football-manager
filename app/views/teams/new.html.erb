<div class='container'>
  <h3>Create a New Team</h3>

  <% if @team.errors.any? %>
    <div class='field_with_errors'>
      <p><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</p>
      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @team do |f| %>

    <div class="form-group">

      <%if current_user.admin%>
        <label>Select a User</label><br>
      <%end%>

        <p><%= user_id_field(@team) %></p>

      <p><label>Team Name</label><br>
      <%= f.text_field :team_name %></p>

      <p><label>Select a League</label><br>
      <%= f.select :'league_id', options_from_collection_for_select(League.all, :id, :name) %></p>

      <%= f.submit "Submit" %>
    </div>
  <%end%>

</div>
