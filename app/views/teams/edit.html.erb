<% if @team.errors.any? %>
  <div class='field_with_errors'>
    <p><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</p>
    <ul>
    <% @team.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class='container'>
  <h3>Edit Your Team</h3>

  <%= form_for @team do |f| %>
    <%= user_id_field(@team) %>
    <div class="form-group">

      <p>Team Name:<br>
      <%= f.text_field :team_name %></p>

      <div class='anchors'>
        <p>Select Players to Add:</p>
        <a href="#QBs">QBs</a>
        <a href="#RBs">RBs</a>
        <a href="#WRs">WRs</a>
        <a href="#TEs">TEs</a>
      </div>

      <div class='list'>
        <section id="QBs">
          <h4>QBs</h4>
          <ul>
            <%= f.collection_check_boxes(:player_ids, Player.qb.list, :id, :player_info, {:multiple => true}) do |p| %>
              <%= p.label(class:"label-checkbox") { p.check_box + p.text } %><br>
            <%end%>
            </ul>
          </section>

          <section id="RBs">
            <h4>RBs</h4>
            <ul>
              <%= f.collection_check_boxes(:player_ids, Player.rb.list, :id, :player_info, {:multiple => true}) do |p| %>
                <%= p.label(class:"label-checkbox") { p.check_box + p.text } %><br>
              <%end%>
            </ul>
          </section>

          <section id="WRs">
            <h4>WRs</h4>
            <ul>
              <%= f.collection_check_boxes(:player_ids, Player.wr.list, :id, :player_info, {:multiple => true}) do |p| %>
                <%= p.label(class:"label-checkbox") { p.check_box + p.text } %><br>
              <%end%>
            </ul>
          </section>

          <section id="TEs">
            <h4>TEs</h4>
            <ul>
              <%= f.collection_check_boxes(:player_ids, Player.te.list, :id, :player_info, {:multiple => true}) do |p| %>
                <%= p.label(class:"label-checkbox") { p.check_box + p.text } %><br>
              <%end%>
            </ul>
          </section>

          <%= f.submit "Submit" %>
        </div>
      </div>
    <%end%>
  <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
</div>
