<h2><%= @team.name %></h2>
<ul>
<h4>QBs</h4>
<% @team.players.qb.each do |player| %>
  <%= player.player_name%>, <%=player.nfl_team %><br>
<%end%>

<h4>RBs</h4>
<% @team.players.rb.each do |player| %>
  <%= player.player_name%>, <%=player.nfl_team %><br>
<%end%>

<h4>WRs</h4>
<% @team.players.wr.each do |player| %>
  <%= player.player_name%>, <%=player.nfl_team %><br>
<%end%>

<h4>TEs</h4>
<% @team.players.te.each do |player| %>
  <%= player.player_name%>, <%=player.nfl_team %><br>
<%end%>
</ul>

<% if current_user == @team.user_id %>
<p><%= link_to "Edit Team Info", edit_user_team_path(@team) %></p>

<%= form_tag team_path(@team.id), method: "delete" do %>
  <%= submit_tag "Delete" %>
<%end%>
<%end%>
