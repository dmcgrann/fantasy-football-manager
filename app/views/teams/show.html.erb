<div class='container'>

  <h2 id="teamName"><%= @team.team_name %></h2>
  <p>Owner: <%= @team.user.name %><br>
    League: <%=@team.league.name%></p>

  <div class='darken'>
    <div id="teamPlayers">
      <% @team.players.each do |player| %>
        <p><%= player.player_name%>, <%=player.nfl_team %></p>
      <%end%><br>
    </div>
    <br></br>
    <a id="add" href="#" >Add Players/Change Team Name</a>

    <div id="playerForm">

      <%= form_for ([@user, @team]) do |f| %>
      <p> User: <%=user_id_field(@team) %></p>

      <h4>Change Team Name:<h4>
      <p> <%= f.text_field :team_name %></p>

      <h4> Add Players  </h4>

            <h4>QBs</h4>
            <ul>
              <%= f.collection_check_boxes(:player_ids, Player.qb.list, :id, :player_info, {:multiple => true}) do |p| %>
                <%= p.label(class:"label-checkbox") { p.check_box + p.text } %><br>
              <%end%>
              </ul>

              <h4>RBs</h4>
              <ul>
                <%= f.collection_check_boxes(:player_ids, Player.rb.list, :id, :player_info, {:multiple => true}) do |p| %>
                  <%= p.label(class:"label-checkbox") { p.check_box + p.text } %><br>
                <%end%>
              </ul>

              <h4>WRs</h4>
              <ul>
                <%= f.collection_check_boxes(:player_ids, Player.wr.list, :id, :player_info, {:multiple => true}) do |p| %>
                  <%= p.label(class:"label-checkbox") { p.check_box + p.text } %><br>
                <%end%>
              </ul>

              <h4>TEs</h4>
              <ul>
                <%= f.collection_check_boxes(:player_ids, Player.te.list, :id, :player_info, {:multiple => true}) do |p| %>
                  <%= p.label(class:"label-checkbox") { p.check_box + p.text } %><br>
                <%end%>
              </ul>

            <%= f.submit "Submit", id: "player_submit" %>

      <%end%>

    </div>
    <br></br>

    <% if current_user.id == @team.user_id || current_user.admin %>
      <%= link_to "Delete Team", @team, method: :delete, data: { confirm: "Really?" } %>
    <% end %>
  </div>
</div>
<br></br>
